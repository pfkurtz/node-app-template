{
  "name": "pfk-app",
  "version": "0.0.1",
  "description": "An app by Patrick Kirts",
  "author": "Patrick Kirts <patkirts@gmail.com>",
  "scripts": {
    "build:client-js-dev": "browserify -t babelify -d client/index.js -o public/index.js",
    "build:html": "echo 'Rebuilding Client HTML' && vulcanize client/index.html > public/index.html",
    "clear": "rm -rf node_modules/",
    "livereload": "livereload public -p 9091",
    "start": "parallelshell 'npm run watch' 'npm run livereload' 'npm run start:dev'",
    "start:dev": "nodemon -q -e js -w common -w server -x 'babel-node server/main.js'",
    "test": "mocha --recursive --compilers js:babel-core/register",
    "watch": "parallelshell 'npm run watch:client-js' 'npm run watch:html'",
    "watch:client-js": "nodemon -q -e js -w common -w client -x 'npm run build:client-js-dev'",
    "watch:html": "nodemon -e html -w client -x 'npm run build:html'"
  },
  "main": "server/main.js",
  "dependencies": {
    "connect": "^3.4.0",
    "express": "^4.13.3",
    "redux": "^3.0.4",
    "serve-static": "^1.10.0",
    "socketcluster": "^2.5.3",
    "socketcluster-client": "^2.4.1"
  },
  "devDependencies": {
    "babel-core": "^6.2.0",
    "babel-plugin-globals": "^1.0.1",
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "chai": "^3.4.1",
    "mocha": "^2.3.4",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0",
    "vulcanize": "^1.14.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "keywords": [
    "arangodb",
    "socketcluster"
  ],
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/patkirts/app-template"
  },
  "bugs": {
    "url": "https://bitbucket.org/patkirts/app-template/issues"
  },
  "private": true,
  "readMeFileName": "README.md"
}
