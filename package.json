{
  "name": "pfk-app",
  "version": "0.0.1",
  "description": "An app by Patrick Kirts",
  "author": "Patrick Kirts <patkirts@gmail.com>",
  "scripts": {
    "start": "nodemon -x 'babel-node main.js'",
    "test": "mocha --compilers js:babel-core/register",
    "livereload": "live-reload --port 9091 ",
    "clear": "rm -rf node_modules/",
    "build-client-js": "browserify -t babelify -d client/index.js -o public/index.js",
    "watch-client-js": "nodemon -e js -w common -w client -x 'npm run build-client-js'"
  },
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/patkirts/app-template"
  },
  "bugs": {
    "url": "https://bitbucket.org/patkirts/app-template/issues"
  },
  "keywords": [
    "arangodb",
    "socketcluster"
  ],
  "dependencies": {},
  "devDependencies": {
    "babel-core": "latest",
    "babel-preset-es2015": "latest",
    "babel-preset-react": "latest",
    "babelify": "latest",
    "browserify": "latest",
    "chai": "latest",
    "live-reload": "latest",
    "mocha": "latest",
    "nodemon": "latest",
    "parallelshell": "latest"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "private": true
}
