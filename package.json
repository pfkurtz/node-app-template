{
  "name": "pfk-app",
  "version": "0.0.1",
  "description": "A template for building Node apps",
  "author": "Patrick Kirts <pat@pats.website>",
  "scripts": {
    "compile:html": "./node_modules/vulcanize/bin/vulcanize --exclude /*.js src/client/index.dev.html > src/public/index.html",
    "precompile:html": "echo 'Building Client HTML'",
    "postcompile:html": "npm run validate-html",
    "compile:js": "echo 'Building Client Javascript'; node node_modules/watchify -d src/client/index.js -o src/public/index.js",
    "build": "./scripts/build.sh",
    "clear": "rm -rf node_modules/ build/",
    "deploy": "./scripts/deploy.sh",
    "livereload": "node node_modules/livereloadx/bin/livereloadx src/public --exclude *.html -s -p 9091",
    "node:dev": "node node_modules/babel-cli/bin/babel-node src/server/main.js",
    "prenode:dev": "echo '*** (RE)STARTING SERVER ***'",
    "start": "export NODE_ENV=development; export PORT=3000; node node_modules/parallelshell 'npm run watch' 'npm run livereload' 'npm run start:dev'",
    "prestart": "echo '*** STARTING APPLICATION ***\n'",
    "start:dev": "node node_modules/nodemon/bin/nodemon -q -e js -w src/common -w src/server -w src/data -w src/rethink -w package.json -w public/index.html -x ' npm run node:dev'",
    "test": "NODE_ENV=test node node_modules/mocha/bin/mocha --full-trace --recursive --compilers js:babel-core/register",
    "validate-html": "node node_modules/html-validator-cli --file=src/public/index.html",
    "watch": "node node_modules/parallelshell 'npm run watch:js' 'npm run watch:html'",
    "watch:js": "node node_modules/nodemon/bin/nodemon -q -e js -w src/common -w src/client -x 'npm run compile:js'",
    "watch:html": "node node_modules/nodemon/bin/nodemon -q -e html -w client -x 'npm run compile:html'"
  },
  "main": "src/server/main.js",
  "dependencies": {
    "connect": "^3.4.1",
    "express": "^4.13.4",
    "get-form-data": "^1.2.5",
    "lodash": "^4.5.1",
    "path": "^0.12.7",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-router": "^2.0.0",
    "react-router-redux": "^3.0.0",
    "redux": "^3.3.1",
    "redux-saga": "^0.7.0",
    "rethinkdbdash": "^2.2.18",
    "serve-static": "^1.10.2",
    "session-rethinkdb": "^2.0.0",
    "socketcluster": "^4.3.2",
    "socketcluster-client": "^4.3.6"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-transform-runtime": "^6.5.2",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-runtime": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "envify": "^3.4.0",
    "jsx-control-statements": "^3.1.0",
    "livereloadx": "^0.3.9",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.0",
    "parallelshell": "^2.0.0",
    "proxyquire": "^1.7.4",
    "react-addons-test-utils": "^0.14.7",
    "react-shallow-testutils": "^1.0.0",
    "redbox-react": "^1.2.2",
    "redux-devtools": "^3.1.1",
    "redux-devtools-dock-monitor": "^1.1.0",
    "redux-devtools-log-monitor": "^1.0.4",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "uglify-js": "^2.6.2",
    "vulcanize": "^1.14.6",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  },
  "keywords": [
    "babel",
    "browserify",
    "livereloadx",
    "mocha",
    "nodemon",
    "react",
    "redux",
    "redux-devtools",
    "redux-saga",
    "rethinkdb",
    "socketcluster",
    "uglify-js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pfkurtz/node-app-template"
  },
  "bugs": {
    "url": "https://github.com/pfkurtz/node-app-template/issues"
  },
  "readMeFileName": "README.md"
}
