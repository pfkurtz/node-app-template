{
  "name": "pfk-app",
  "version": "0.0.1",
  "description": "A template for building Node apps",
  "author": "Patrick Kirts <patkirts@gmail.com>",
  "scripts": {
    "build:html-dev": "echo 'Building Client HTML' && vulcanize --exclude /*.js client/index.dev.html > public/index.html && npm run validate:html-dev",
    "build:js-client-dev": "echo 'Building Client Javascript'; watchify -d client/index.js -o public/index.js",
    "build": "./scripts/build.sh",
    "clear": "rm -rf node_modules/",
    "deploy": "./scripts/deploy.sh",
    "init": "./scripts/init.sh",
    "install-globals": "npm i -g babel-cli browserify html-validator-cli livereloadx nodemon parallelshell vulcanize watchify",
    "livereload": "livereloadx public --exclude *.html -s -p 9091",
    "node:dev": "echo '*** (RE)STARTING SERVER ***' && babel-node server/main.js",
    "start": "export NODE_ENV=development; export PORT=3000; parallelshell 'npm run watch' 'npm run livereload' 'npm run start:dev'",
    "prestart": "echo '*** STARTING APPLICATION ***\n'",
    "start:dev": "nodemon -q -e js -w common -w server -w package.json -w public/index.html -x ' npm run node:dev'",
    "start:prod": "export NODE_ENV=production; ",
    "test": "echo '*** RUNNING TESTS***\n'; NODE_ENV=test mocha --full-trace --recursive --compilers js:babel-core/register",
    "validate:html-dev": "html-validator --file=public/index.html",
    "validate:html-prod": "echo 'Not yet implemented'",
    "watch": "parallelshell 'npm run watch:client-js' 'npm run watch:html'",
    "watch:client-js": "nodemon -q -e js -w common -w client -x 'npm run build:js-client-dev'",
    "watch:html": "nodemon -q -e html -w client -x 'npm run build:html-dev'"
  },
  "main": "server/main.js",
  "dependencies": {
    "connect": "^3.4.1",
    "deep-freeze": "0.0.1",
    "express": "^4.13.4",
    "get-form-data": "^1.2.5",
    "path": "^0.12.7",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "redux": "^3.3.1",
    "redux-saga": "^0.7.0",
    "serve-static": "^1.10.2",
    "socketcluster": "^4.3.2",
    "socketcluster-client": "^4.3.3"
  },
  "devDependencies": {
    "babel-core": "^6.5.1",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-transform-runtime": "^6.5.0",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-runtime": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "envify": "^3.4.0",
    "jsx-control-statements": "^3.1.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0",
    "proxyquire": "^1.7.4",
    "react-addons-test-utils": "^0.14.7",
    "redbox-react": "^1.2.2",
    "redux-devtools": "^3.1.1",
    "redux-devtools-dock-monitor": "^1.0.1",
    "redux-devtools-log-monitor": "^1.0.4",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "vulcanize": "^1.14.5",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  },
  "keywords": [
    "babel",
    "livereloadx",
    "mocha",
    "react",
    "redux",
    "redux-devtools",
    "redux-saga",
    "socketcluster"
  ],
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/patkirts/app-template"
  },
  "bugs": {
    "url": "https://bitbucket.org/patkirts/app-template/issues"
  },
  "private": true,
  "readMeFileName": "README.md"
}
