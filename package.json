{
  "name": "pfk-app",
  "version": "0.0.1",
  "description": "A template for building Node apps",
  "author": "Patrick Kirts <patkirts@gmail.com>",
  "scripts": {
    "build:js-client-dev": "echo 'Building Client Javascript'; watchify -p [ browserify-hmr ] -d client/index.js -o public/index.js",
    "build:js-client-prod": "echo 'No production build command yet for client JS'",
    "build:html-dev": "echo 'Building Client HTML' && vulcanize --exclude /*.js client/index.html > public/index.html && npm run validate:html-dev",
    "clear": "rm -rf node_modules/",
    "init": "./init.sh",
    "install-globals": "npm install -g babel-cli browserify html-validator-cli nodemon parallelshell vulcanize",
    "node:dev": "echo '*** (RE)STARTING SERVER ***' && babel-node server/main.js",
    "start": "export NODE_ENV=development; export PORT=3000; parallelshell 'npm run watch' 'npm run start:dev'",
    "prestart": "echo '*** STARTING APPLICATION ***\n'",
    "start:dev": "nodemon -q -e js -w common -w server -w package.json -x ' npm run node:dev'",
    "test": "echo '*** RUNNING TESTS***\n'; mocha --recursive --compilers js:babel-core/register",
    "validate:html-dev": "html-validator --file=public/index.html",
    "validate:html-prod": "echo 'Not yet implemented'",
    "watch": "parallelshell 'npm run watch:client-js' 'npm run watch:html'",
    "watch:client-js": "nodemon -q -e js -w common -w client -x 'npm run build:js-client-dev'",
    "watch:html": "nodemon -q -e html -w client -x 'npm run build:html-dev'"
  },
  "main": "server/main.js",
  "dependencies": {
    "connect": "^3.4.1",
    "deep-freeze": "0.0.1",
    "express": "^4.13.4",
    "path": "^0.12.7",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-redux": "^4.0.6",
    "redux": "^3.0.6",
    "serve-static": "^1.10.2",
    "socketcluster": "^4.3.1",
    "socketcluster-client": "^4.1.6"
  },
  "devDependencies": {
    "babel-core": "^6.2.0",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "browserify-hmr": "^0.3.1",
    "chai": "^3.4.1",
    "envify": "^3.4.0",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0",
    "react-transform-catch-errors": "^1.0.1",
    "react-transform-hmr": "^1.0.1",
    "redbox-react": "^1.2.0",
    "redux-devtools": "^3.0.1",
    "redux-devtools-dock-monitor": "^1.0.1",
    "redux-devtools-log-monitor": "^1.0.2",
    "ud": "^3.0.0",
    "vulcanize": "^1.14.0",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-runtime"
    ],
    "env": {
      "development": {
        "plugins": [
          "react-transform",
          {
            "transforms": [
              {
                "transform": "react-transform-hmr",
                "imports": [
                  "react"
                ],
                "locals": [
                  "module"
                ]
              },
              {
                "transform": "react-transform-catch-errors",
                "imports": [
                  "react",
                  "redbox-react"
                ]
              }
            ]
          }
        ]
      }
    }
  },
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  },
  "keywords": [
    "babel",
    "livereload",
    "mocha",
    "react",
    "redux",
    "socketcluster"
  ],
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/patkirts/app-template"
  },
  "bugs": {
    "url": "https://bitbucket.org/patkirts/app-template/issues"
  },
  "private": true,
  "readMeFileName": "README.md"
}
